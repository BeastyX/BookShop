@model BookViewModel

@{
    ViewData["Title"] = "Izmena Knjige";
}

<partial name="_BackButton" />

<!-- Big Card -->
<div class="card shadow border-0 mt-4">

    <!-- Header -->
    <div class="card-header bg-dark bg-gradient py-2 mb-3">
        <div class="col-12 text-center text-white">
            <h3>@ViewData["Title"]</h3>
        </div>
    </div>

    <!-- Content -->
    <div class="card-body p-4">

        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Book.Id" />
            <input type="hidden" asp-for="Book.CoverImagePath" />

            <div class="row">
                <div class="col-md-8 order-2 order-md-1">
                    <div class="form-floating col-12 mb-4">
                        <input asp-for="Book.Title" class="form-control shadow border-0" placeholder="" id="zaAutoFocus" />
                        <label asp-for="Book.Title"></label>
                        <span asp-validation-for="Book.Title" class="text-danger"></span>
                    </div>

                    <div class="form-floating col-12 mb-4">
                        <textarea asp-for="Book.Description" class="form-control shadow border-0" placeholder="" style="height: 10em;"></textarea>
                        <label asp-for="Book.Description"></label>
                        <span asp-validation-for="Book.Description" class="text-danger"></span>
                    </div>

                    <div class="form-floating col-12 mb-4">
                        <input asp-for="Book.Author" class="form-control shadow border-0" placeholder="" />
                        <label asp-for="Book.Author"></label>
                        <span asp-validation-for="Book.Author" class="text-danger"></span>
                    </div>

                    <div class="form-floating col-12 mb-4">
                        <input asp-for="Book.Price" class="form-control shadow border-0" placeholder="" type="number" step="any" />
                        <label asp-for="Book.Price"></label>
                        <span asp-validation-for="Book.Price" class="text-danger"></span>
                    </div>

                    <div class="form-floating col-12 mb-4">
                        <select asp-for="Book.CategoryId" asp-items='@Model.Categories' class="form-control shadow border-0">
                            <option selected disabled>Izaberi kategoriju knjige</option>
                        </select>
                        <label asp-for="Book.Category"></label>
                        <span asp-validation-for="Book.CategoryId" class="text-danger"></span>
                    </div>

                    <div class="form-floating col-12 mb-4">
                        <input asp-for="CoverImage" type="file" class="form-control shadow border-0" style="padding-top: 2.5rem; padding-bottom: 1.65rem;" placeholder="" />
                        <label asp-for="CoverImage"></label>
                        <span asp-validation-for="CoverImage" class="text-danger"></span>
                    </div>
                </div>

                <div class="col mb-4 order-1 order-md-2">
                    <img src="@Model.Book.CoverImagePath" class="img-fluid w-100 rounded-4 border border-secondary-subtle p-2 shadow" />
                </div>
            </div>

            <!-- Bottom Buttons -->
            <div class="row mt-5">
                <div class="col-6 col-lg-3">
                    <button type="submit" class="btn btn-primary container-fluid"><i class="bi bi-floppy me-2"></i>Sačuvaj</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
