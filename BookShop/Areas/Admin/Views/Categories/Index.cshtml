@model List<Category>

@{
    ViewData["Title"] = "Kategorije";
}

<a class="btn btn-danger my-4" asp-action="Create">Ovo je dugmence za novu kategorijicu</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>@Html.DisplayNameFor(model => model[0].Name)</th>
            <th>Alati</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-secondary">Izmeni</a>
                    <form method="post" asp-action="Delete" asp-route-id="@item.Id">
                        @Html.AntiForgeryToken()
                        <input asp-for="@item.Id" type="hidden" />
                        <button type="submit" class="btn btn-danger">Obrisi</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>